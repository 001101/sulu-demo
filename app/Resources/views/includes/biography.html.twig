<section class="biography">
    <div class="grid">
        <div class="grid__item desk--one-half">
            <div class="biography-text">
                <h2 class="heading--h2--border">
                    {{ biography.biographyTitle }}
                </h2>

                <h3 class="heading--h3">
                    {{ biography.biographyHeading }}
                </h3>

                {{ biography.biographyText|raw }}

                <a class="biography-text-button"
                   href="{{ sulu_content_load(biography.biographyLink).urls[request.locale] }}">
                    Read More
                </a>
            </div>
        </div>
        {% if biography.biographyImage|length > 0 %}
            <img class="biography-image grid__item desk--one-half" src="{{ biography.biographyImage[0].url }}"/>
        {% endif %}
    </div>
</section>