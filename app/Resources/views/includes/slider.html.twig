<section class="slider">
    <div class="js-slider" data-slick='{"slidesToShow": 1, "slidesToScroll": 1}'>
        {% for slide in slides if slide.mediaId is not null %}
            <div class="slider-item">
                {% set image = sulu_resolve_media(slide.mediaId, request.locale) %}

                <picture>
                    <source media="(min-width: 1024px)"
                            srcset="{{ image.thumbnails['1920x1080'] }}"
                            class="slides-images">

                    <source media="(min-width: 481px) and (max-width: 1023px)"
                            srcset="{{ image.thumbnails['960x540'] }}"
                            class="slides-images">

                    <source media="(max-width: 480px)"
                            srcset="{{ image.thumbnails['480x270'] }}"
                            class="slides-images">

                    <!---Fallback--->
                    <img srcset="{{ image.thumbnails['1920x1080'] }}"
                         alt="{{ image.title }}"
                         class="slides-images"/>
                </picture>

                <div class="slides-text">
                    <h1 class="heading--h1">
                        {% if slide.title|default("") %}
                            {{ slide.title }}
                        {% endif %}
                    </h1>

                    {% if slide.description|default("") %}
                        <div class="heading--h1--description">
                            {{ slide.description|raw }}
                        </div>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</section>