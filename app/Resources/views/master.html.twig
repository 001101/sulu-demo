<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {% if extension is defined and content is defined %}
            {{ sulu_seo(extension.seo, content, urls|default([]), shadowBaseLocale|default(''))|raw }}
        {% endif %}

        {% block meta %}{% endblock %}

        {% block style %}
            <link rel="stylesheet" href="{{ asset('/dist/css/style.css') }}">
            <script src="{{ asset('/dist/js/modernizer.min.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <header>
            {% block header %}
                {% include('blocks/navigation.html.twig') %}
            {% endblock %}
        </header>

        <section id="content" vocab="http://schema.org/" typeof="Content">
            {% block content %}{% endblock %}
        </section>

        <aside>
            {% block aside %}{% endblock %}
        </aside>

        <footer>
            {% block footer %}
                {% include('blocks/footer.html.twig') %}
            {% endblock %}
        </footer>

        {% block javascripts %}
            <script src="{{ asset('/dist/js/main.min.js') }}"></script>
        {% endblock %}
    </body>
</html>
