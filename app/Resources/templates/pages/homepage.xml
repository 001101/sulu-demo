<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>homepage</key>

    <view>templates/homepage</view>
    <controller>SuluWebsiteBundle:Default:index</controller>
    <cacheLifetime>2400</cacheLifetime>

    <meta>
        <title lang="en">Homepage</title>
        <title lang="de">Startseite</title>
    </meta>

    <properties>
        <section name="highlight">
            <properties>
                <property name="title" type="text_line" mandatory="true">
                    <meta>
                        <title lang="en">Title</title>
                        <title lang="de">Titel</title>
                    </meta>
                    <params>
                        <param name="headline" value="true"/>
                    </params>

                    <tag name="sulu.rlp.part"/>
                </property>

                <property name="url" type="resource_locator" mandatory="true">
                    <meta>
                        <title lang="en">Resourcelocator</title>
                        <title lang="de">Adresse</title>
                    </meta>

                    <tag name="sulu.rlp"/>
                </property>
            </properties>
        </section>

        <section name="slider">
            <meta>
                <title lang="de">Slider</title>
                <title lang="en">Slider</title>
            </meta>

            <properties>
                <property name="slides" type="teaser_selection">
                    <meta>
                        <title lang="en">Slides</title>
                        <title lang="de">Slides</title>
                    </meta>
                </property>
            </properties>
        </section>

        <section name="blocks">
            <meta>
                <title lang="de">Blöcke</title>
                <title lang="en">Blocks</title>
            </meta>

            <properties>
                <block name="blocks" default-type="editor" minOccurs="0">
                    <meta>
                        <title lang="de">Inhalte</title>
                        <title lang="en">Content</title>
                    </meta>

                    <types>
                        <type name="biography">
                            <meta>
                                <title lang="de">Biographie</title>
                                <title lang="en">Biography</title>
                            </meta>

                            <properties>
                                <property name="biographyTitle" type="text_line">
                                    <meta>
                                        <title lang="en">Title</title>
                                        <title lang="de">Titel</title>
                                    </meta>
                                </property>

                                <property name="biographyHeading" type="text_editor">
                                    <meta>
                                        <title lang="en">Heading</title>
                                        <title lang="de">Überschrift</title>
                                    </meta>
                                </property>

                                <property name="biographyText" type="text_editor">
                                    <meta>
                                        <title lang="en">Text</title>
                                        <title lang="de">Text</title>
                                    </meta>
                                </property>

                                <property name="biographyImage" type="media_selection">
                                    <meta>
                                        <title lang="en">Image</title>
                                        <title lang="de">Bild</title>
                                    </meta>

                                    <params>
                                        <param name="types" value="image"/>
                                    </params>
                                </property>

                                <property name="biographyLink" type="single_internal_link">
                                    <meta>
                                        <title lang="en">Link</title>
                                        <title lang="de">Link</title>
                                    </meta>
                                </property>
                            </properties>
                        </type>

                        <type name="artists">
                            <meta>
                                <title lang="de">Künstler</title>
                                <title lang="en">Artists</title>
                            </meta>

                            <properties>
                                <property name="artistsData" type="smart_content">
                                    <meta>
                                        <title lang="en">Artists</title>
                                        <title lang="de">Künstler</title>
                                    </meta>

                                    <params>
                                        <param name="properties" type="collection">
                                            <param name="heading" value="title"/>
                                            <param name="image" value="contentTitleimage"/>
                                            <param name="url" value="url"/>
                                        </param>
                                    </params>
                                </property>
                            </properties>
                        </type>


                       <type name="discography">
                            <meta>
                                <title lang="de">Discography</title>
                                <title lang="en">Discography</title>
                            </meta>

                            <properties>
                                <property name="discographyTitle" type="text_line">
                                    <meta>
                                        <title lang="en">Title</title>
                                        <title lang="de">Titel</title>
                                    </meta>
                                </property>

                                <property name="discographyData" type="smart_content">
                                    <meta>
                                        <title lang="en">Albums</title>
                                        <title lang="de">Alben</title>
                                    </meta>

                                    <params>
                                        <param name="properties" type="collection">
                                            <param name="heading" value="contentHeading"/>
                                            <param name="image" value="contentTitleimage"/>
                                            <param name="url" value="url"/>
                                        </param>
                                    </params>
                                </property>
                            </properties>
                        </type>

                        <type name="news">
                            <meta>
                                <title lang="de">Neuigkeiten</title>
                                <title lang="en">News</title>
                            </meta>

                            <properties>
                                <property name="title" type="text_line">
                                    <meta>
                                        <title lang="en">Title</title>
                                        <title lang="de">Titel</title>
                                    </meta>
                                </property>

                                <property name="newsData" type="smart_content">
                                    <meta>
                                        <title lang="en">Articles</title>
                                        <title lang="de">Artikel</title>
                                    </meta>

                                    <params>
                                        <param name="properties" type="collection">
                                            <param name="heading" value="contentHeading"/>
                                            <param name="text" value="contentSubheading"/>
                                            <param name="image" value="headerImage"/>
                                            <param name="categories" value="excerpt.categories"/>
                                            <param name="url" value="url"/>
                                        </param>
                                    </params>
                                </property>
                            </properties>
                        </type>

                        <type name="partner">
                            <meta>
                                <title lang="de">Unsere Partner</title>
                                <title lang="en">Our Partners</title>
                            </meta>

                            <properties>
                                <property name="partnerData" type="snippet">
                                    <meta>
                                        <title lang="de">Partner</title>
                                        <title lang="en">Partner</title>
                                    </meta>

                                    <params>
                                        <param name="snippetType" value="partner"/>
                                    </params>
                                </property>
                            </properties>
                        </type>
                    </types>
                </block>
            </properties>
        </section>
    </properties>
</template>
