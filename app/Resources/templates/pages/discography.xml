<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>discography</key>

    <view>templates/discography</view>
    <controller>AppBundle:Artist:index</controller>
    <cacheLifetime>604800</cacheLifetime>

    <meta>
        <title lang="en">Album</title>
        <title lang="de">Album</title>
    </meta>

    <properties>
        <section name="highlight">
            <properties>
                <property name="title" type="text_line" mandatory="true">
                    <meta>
                        <title lang="en">Title</title>
                        <title lang="de">Titel</title>
                    </meta>
                    <params>
                        <param name="headline" value="true"/>
                    </params>

                    <tag name="sulu.rlp.part"/>
                </property>

                <property name="url" type="resource_locator" mandatory="true">
                    <meta>
                        <title lang="en">Resourcelocator</title>
                        <title lang="de">Adresse</title>
                    </meta>

                    <tag name="sulu.rlp"/>
                </property>
            </properties>
        </section>

        <section name="header">
            <meta>
                <title lang="en">Header</title>
                <title lang="de">Kopf</title>
            </meta>

            <properties>
                <property name="headerImage" type="media_selection">
                    <meta>
                        <title lang="en">Header Image</title>
                        <title lang="de">Kopf - Bild</title>
                    </meta>

                    <params>
                        <param name="type" value="image, video"/>
                    </params>
                </property>

                <property name="headerHeading" type="text_line">
                    <meta>
                        <title lang="en">Header Heading</title>
                        <title lang="de">Kopf - Überschrift</title>
                    </meta>
                </property>

                <property name="headerSubheading" type="text_editor">
                    <meta>
                        <title lang="en">Header Subheading</title>
                        <title lang="de">Kopf - Unter Überschrift</title>
                    </meta>
                </property>

                <property name="headerType" type="single_select">
                    <meta>
                        <title lang="en">Header Size</title>
                        <title lang="en">Kopf Größe</title>
                    </meta>
                    <params>
                        <param name="values" type="collection">
                            <param name="small">
                                <meta>
                                    <title lang="en">Small</title>
                                    <title lang="de">Klein</title>
                                </meta>
                            </param>
                            <param name="medium">
                                <meta>
                                    <title lang="en">Medium</title>
                                    <title lang="de">Mittel</title>
                                </meta>
                            </param>
                            <param name="large">
                                <meta>
                                    <title lang="en">Large</title>
                                    <title lang="de">Groß</title>
                                </meta>
                            </param>
                        </param>
                    </params>
                </property>
            </properties>
        </section>

        <section name="content">
            <meta>
                <title lang="de">Inhalt</title>
                <title lang="en">Content</title>
            </meta>

            <properties>
                <property name="contentHeading" type="text_line">
                    <meta>
                        <title lang="en">Heading</title>
                        <title lang="de">Überschrift</title>
                    </meta>
                </property>

                <property name="contentSubheading" type="text_editor">
                    <meta>
                        <title lang="en">Subheading</title>
                        <title lang="de">Unter Überschrift</title>
                    </meta>
                </property>
            </properties>
        </section>

        <block name="blocks" default-type="editor" minOccurs="0">
            <meta>
                <title lang="de">Inhalte</title>
                <title lang="en">Content</title>
            </meta>

            <types>
                <type name="text">
                    <meta>
                        <title lang="de">Text</title>
                        <title lang="en">Text</title>
                    </meta>

                    <properties>
                        <property name="text" type="text_editor">
                            <meta>
                                <title lang="en">Text</title>
                                <title lang="de">Text</title>
                            </meta>
                        </property>
                    </properties>
                </type>

                <type name="quote">
                    <meta>
                        <title lang="de">Quote</title>
                        <title lang="en">Zitat</title>
                    </meta>

                    <properties>
                        <property name="quote" type="text_editor">
                            <meta>
                                <title lang="en">Quote</title>
                                <title lang="de">Zitat</title>
                            </meta>
                        </property>
                    </properties>
                </type>

                <type name="media_gallery">
                    <meta>
                        <title lang="de">Medien</title>
                        <title lang="en">Media</title>
                    </meta>

                    <properties>
                        <property name="medias" type="media_selection">
                            <meta>
                                <title lang="en">Media</title>
                                <title lang="de">Medien</title>
                            </meta>

                            <params>
                                <param name="type" value="image"/>
                            </params>
                        </property>
                    </properties>
                </type>

                <type name="track_lists">
                    <meta>
                        <title lang="de">Song Listen</title>
                        <title lang="en">Track Lists</title>
                    </meta>

                    <properties>
                        <property name="lists" type="snippet">
                            <meta>
                                <title lang="en">Track Lists</title>
                                <title lang="de">Song Listen</title>
                            </meta>

                            <params>
                                <param name="snippetType" value="track_list"/>
                            </params>
                        </property>
                    </properties>
                </type>

                <type name="artists_element">
                    <meta>
                        <title lang="de">Künstler</title>
                        <title lang="en">Artists</title>
                    </meta>

                    <properties>
                        <property name="heading" type="text_line">
                            <meta>
                                <title lang="en">Heading</title>
                                <title lang="de">Überschrift</title>
                            </meta>
                        </property>

                        <property name="artistsData" type="smart_content">
                            <meta>
                                <title lang="en">Artists</title>
                                <title lang="de">Künstler</title>
                            </meta>

                            <params>
                                <param name="properties" type="collection">
                                    <param name="heading" value="title"/>
                                    <param name="image" value="headerImage"/>
                                    <param name="url" value="url"/>
                                </param>
                            </params>
                        </property>
                    </properties>
                </type>
            </types>
        </block>
    </properties>
</template>
