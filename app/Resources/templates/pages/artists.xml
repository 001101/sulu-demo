<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <!-- This is the template for the "Artists" page. -->
    <!-- For further information, have a look at homepage.xml. -->
    <key>artists</key>

    <view>AppBundle:templates:artists</view>
    <controller>SuluWebsiteBundle:Default:index</controller>
    <cacheLifetime>604800</cacheLifetime>

    <meta>
        <title lang="en">Artist Overview</title>
        <title lang="de">Artist Übersicht</title>
    </meta>

    <properties>
        <section name="highlight">
            <properties>
                <property name="title" type="text_line" mandatory="true">
                    <meta>
                        <title lang="en">Title</title>
                        <title lang="de">Titel</title>
                    </meta>

                    <params>
                        <param name="headline" value="true"/>
                    </params>

                    <tag name="sulu.rlp.part"/>
                </property>

                <property name="url" type="resource_locator" mandatory="true">
                    <meta>
                        <title lang="en">Resource Locator</title>
                        <title lang="de">Adresse</title>
                    </meta>

                    <tag name="sulu.rlp"/>
                </property>
            </properties>
        </section>

        <section name="header">
            <meta>
                <title lang="en">Header</title>
                <title lang="de">Header</title>
            </meta>

            <properties>
                <property name="headerImage" type="media_selection">
                    <meta>
                        <title lang="en">Header - Image</title>
                        <title lang="de">Header - Bild</title>
                    </meta>

                    <params>
                        <param name="type" value="image, video"/>
                    </params>
                </property>

                <property name="headerHeading" type="text_line">
                    <meta>
                        <title lang="en">Header - Heading</title>
                        <title lang="de">Header - Überschrift</title>
                    </meta>
                </property>

                <property name="headerSubheading" type="text_editor">
                    <meta>
                        <title lang="en">Header - Subheading</title>
                        <title lang="de">Header - Unter Überschrift</title>
                    </meta>
                </property>

                <property name="headerType" type="single_select">
                    <meta>
                        <title lang="en">Header - Size</title>
                        <title lang="de">Header - Größe</title>
                    </meta>

                    <params>
                        <param name="values" type="collection">
                            <param name="small">
                                <meta>
                                    <title lang="en">Small</title>
                                    <title lang="de">Klein</title>
                                </meta>
                            </param>

                            <param name="medium">
                                <meta>
                                    <title lang="en">Medium</title>
                                    <title lang="de">Mittel</title>
                                </meta>
                            </param>

                            <param name="large">
                                <meta>
                                    <title lang="en">Large</title>
                                    <title lang="de">Groß</title>
                                </meta>
                            </param>
                        </param>
                    </params>
                </property>
            </properties>
        </section>

        <section name="artists">
            <meta>
                <title lang="en">Artists</title>
                <title lang="de">Künstler</title>
            </meta>

            <properties>
                <property name="artists" type="smart_content">
                    <meta>
                        <title lang="en">Artists</title>
                        <title lang="de">Künstler</title>
                    </meta>

                    <params>
                        <param name="properties" type="collection">
                            <param name="heading" value="title"/>
                            <param name="blocks" value="blocks"/>
                            <param name="image" value="headerImage"/>
                            <param name="author" value="author"/>
                            <param name="url" value="url"/>
                        </param>
                    </params>
                </property>
            </properties>
        </section>

        <section name="albums">
            <meta>
                <title lang="en">Artists</title>
                <title lang="de">Künstler</title>
            </meta>

            <properties>
                <property name="discographyTitle" type="text_line">
                    <meta>
                        <title lang="en">Title</title>
                        <title lang="de">Titel</title>
                    </meta>
                </property>

                <property name="discographyData" type="smart_content">
                    <meta>
                        <title lang="en">Albums</title>
                        <title lang="de">Alben</title>
                    </meta>

                    <params>
                        <param name="properties" type="collection">
                            <param name="heading" value="title"/>
                            <param name="image" value="headerImage"/>
                            <param name="url" value="url"/>
                        </param>
                    </params>
                </property>
            </properties>
        </section>
    </properties>
</template>
