<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>about_us</key>

    <view>templates/about_us</view>
    <controller>SuluWebsiteBundle:Default:index</controller>
    <cacheLifetime>604800</cacheLifetime>

    <meta>
        <title lang="en">About Us</title>
        <title lang="de">Über Uns</title>
    </meta>

    <properties>
        <section name="highlight">
            <properties>
                <property name="title" type="text_line" mandatory="true">
                    <meta>
                        <title lang="en">Title</title>
                        <title lang="de">Titel</title>
                    </meta>
                    <params>
                        <param name="headline" value="true"/>
                    </params>

                    <tag name="sulu.rlp.part"/>
                </property>

                <property name="url" type="resource_locator" mandatory="true">
                    <meta>
                        <title lang="en">Resourcelocator</title>
                        <title lang="de">Adresse</title>
                    </meta>

                    <tag name="sulu.rlp"/>
                </property>
            </properties>
        </section>

        <section name="header">
            <meta>
                <title lang="en">Header</title>
                <title lang="de">Header</title>
            </meta>

            <properties>
                <property name="headerImage" type="media_selection" mandatory="true">
                    <meta>
                        <title lang="en">Header Image</title>
                        <title lang="de">Header - Bild</title>
                    </meta>
                    <params>
                        <param name="types" value="image"/>
                    </params>
                </property>

                <property name="headerHeading" type="text_line">
                    <meta>
                        <title lang="en">Header Heading</title>
                        <title lang="de">Header - Überschrift</title>
                    </meta>
                </property>

                <property name="headerSubheading" type="text_area">
                    <meta>
                        <title lang="en">Header Subheading</title>
                        <title lang="de">Header - Unter Überschrift</title>
                    </meta>
                </property>
            </properties>
        </section>

        <property name="images" type="media_selection">
            <meta>
                <title lang="en">Images</title>
                <title lang="de">Fotos</title>
            </meta>
            <params>
                <param name="types" value="image"/>
            </params>
        </property>

        <section name="tabs">
            <meta>
                <title lang="de">Tabs</title>
                <title lang="en">Tabs</title>
            </meta>

            <properties>
                <property name="tabsHeading" type="text_line">
                    <meta>
                        <title lang="en">Heading</title>
                        <title lang="de">Überschrift</title>
                    </meta>
                </property>

                <property name="tabsSubheading" type="text_area">
                    <meta>
                        <title lang="en">Subheading</title>
                        <title lang="de">Unter Überschrift</title>
                    </meta>
                </property>

                <property name="tabsText" type="text_editor">
                    <meta>
                        <title lang="en">Text</title>
                        <title lang="de">Text</title>
                    </meta>
                </property>

                <block name="tabs" default-type="tab" minOccurs="0" maxOccurs="4">
                    <meta>
                        <title lang="de">Tab</title>
                        <title lang="en">Tab</title>
                    </meta>

                    <types>
                        <type name="tab">
                            <meta>
                                <title lang="de">Tab</title>
                                <title lang="en">Tab</title>
                            </meta>

                            <properties>
                                <property name="tabName" type="text_line">
                                    <meta>
                                        <title lang="en">Tab Name</title>
                                        <title lang="de">Name des Tabs</title>
                                    </meta>
                                </property>

                                <property name="heading" type="text_area">
                                    <meta>
                                        <title lang="en">Heading</title>
                                        <title lang="de">Überschrift</title>
                                    </meta>
                                </property>

                                <property name="text" type="text_editor">
                                    <meta>
                                        <title lang="en">Text</title>
                                        <title lang="de">Text</title>
                                    </meta>
                                </property>
                            </properties>
                        </type>
                    </types>
                </block>
            </properties>
        </section>

        <section name="artists">
            <meta>
                <title lang="de">Künstler</title>
                <title lang="en">Artists</title>
            </meta>

            <properties>
                <property name="artistsTitle" type="text_line">
                    <meta>
                        <title lang="en">Title</title>
                        <title lang="de">Titel</title>
                    </meta>
                </property>

                <property name="artistsBackground" type="media_selection">
                    <meta>
                        <title lang="en">Background</title>
                        <title lang="de">Hindergrundbild</title>
                    </meta>
                </property>

                <property name="artistsData" type="smart_content">
                    <meta>
                        <title lang="en">Artists</title>
                        <title lang="de">Künstler</title>
                    </meta>

                    <params>
                        <param name="properties" type="collection">
                            <param name="heading" value="contentHeading"/>
                            <param name="image" value="contentTitleimage"/>
                            <param name="url" value="url"/>
                        </param>
                    </params>
                </property>
            </properties>
        </section>

        <property name="action" type="snippet">
            <meta>
                <title lang="de">Zum Buchen</title>
                <title lang="en">For Booking</title>
            </meta>

            <params>
                <param name="snippetType" value="action"/>
            </params>
        </property>

        <property name="partnerData" type="snippet">
            <meta>
                <title lang="de">Partner</title>
                <title lang="en">Partner</title>
            </meta>

            <params>
                <param name="snippetType" value="partner"/>
            </params>
        </property>
    </properties>
</template>
