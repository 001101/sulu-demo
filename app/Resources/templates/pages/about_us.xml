<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">
    <key>about_us</key>
    <view>AppBundle:templates:about-us</view>
    <controller>SuluWebsiteBundle:Default:index</controller>
    <cacheLifetime>604800</cacheLifetime>
    <meta>
        <title lang="en">About Us</title>
        <title lang="de">Über Uns</title>
    </meta>
    <properties>
        <section name="highlight">
            <properties>
                <property name="title" type="text_line" mandatory="true">
                    <meta>
                        <title lang="en">Title</title>
                        <title lang="de">Titel</title>
                    </meta>
                    <params>
                        <param name="headline" value="true"/>
                    </params>
                    <tag name="sulu.rlp.part"/>
                </property>
                <property name="url" type="resource_locator" mandatory="true">
                    <meta>
                        <title lang="en">Resourcelocator</title>
                        <title lang="de">Adresse</title>
                    </meta>
                    <tag name="sulu.rlp"/>
                </property>
            </properties>
        </section>
        <section name="header">
            <meta>
                <title lang="en">Header</title>
                <title lang="de">Header</title>
            </meta>
            <properties>
                <property name="headerImage" type="media_selection">
                    <meta>
                        <title lang="en">Header - Image</title>
                        <title lang="de">Header - Bild</title>
                    </meta>
                    <params>
                        <param name="type" value="image, video"/>
                    </params>
                </property>
                <property name="headerHeading" type="text_line">
                    <meta>
                        <title lang="en">Header - Heading</title>
                        <title lang="de">Header - Überschrift</title>
                    </meta>
                </property>
                <property name="headerSubheading" type="text_editor">
                    <meta>
                        <title lang="en">Header - Subheading</title>
                        <title lang="de">Header - Unter Überschrift</title>
                    </meta>
                </property>
                <property name="headerType" type="single_select">
                    <meta>
                        <title lang="en">Header - Size</title>
                        <title lang="de">Header - Größe</title>
                    </meta>
                    <params>
                        <param name="values" type="collection">
                            <param name="small">
                                <meta>
                                    <title lang="en">Small</title>
                                    <title lang="de">Klein</title>
                                </meta>
                            </param>
                            <param name="medium">
                                <meta>
                                    <title lang="en">Medium</title>
                                    <title lang="de">Mittel</title>
                                </meta>
                            </param>
                            <param name="large">
                                <meta>
                                    <title lang="en">Large</title>
                                    <title lang="de">Groß</title>
                                </meta>
                            </param>
                        </param>
                    </params>
                </property>
            </properties>
        </section>
        <block name="blocks" default-type="editor" minOccurs="0">
            <meta>
                <title lang="de">Inhalte</title>
                <title lang="en">Content</title>
            </meta>
            <types>
                <type name="heading">
                    <meta>
                        <title lang="en">Heading</title>
                        <title lang="de">Überschrift</title>
                    </meta>
                    <properties>
                        <property name="heading" type="text_line">
                            <meta>
                                <title lang="en">Heading</title>
                                <title lang="de">Überschrift</title>
                            </meta>
                        </property>
                        <property name="background" type="checkbox">
                            <meta>
                                <title lang="en">Background Color</title>
                                <title lang="de">Hintergrundfarbe</title>
                            </meta>
                            <params>
                                <param name="type" value="toggler"/>
                            </params>
                        </property>
                    </properties>
                </type>
                <type name="subheading">
                    <meta>
                        <title lang="en">Subheading</title>
                        <title lang="de">Unter Überschrift</title>
                    </meta>
                    <properties>
                        <property name="subheading" type="text_editor">
                            <meta>
                                <title lang="en">Subheading</title>
                                <title lang="de">Unter Überschrift</title>
                            </meta>
                        </property>
                        <property name="background" type="checkbox">
                            <meta>
                                <title lang="en">Background Color</title>
                                <title lang="de">Hintergrundfarbe</title>
                            </meta>
                            <params>
                                <param name="type" value="toggler"/>
                            </params>
                        </property>
                    </properties>
                </type>
                <type name="text">
                    <meta>
                        <title lang="en">Text</title>
                        <title lang="de">Text</title>
                    </meta>
                    <properties>
                        <property name="text" type="text_editor">
                            <meta>
                                <title lang="en">Text</title>
                                <title lang="de">Text</title>
                            </meta>
                        </property>
                        <property name="background" type="checkbox">
                            <meta>
                                <title lang="en">Background Color</title>
                                <title lang="de">Hintergrundfarbe</title>
                            </meta>
                            <params>
                                <param name="type" value="toggler"/>
                            </params>
                        </property>
                    </properties>
                </type>
                <type name="quote">
                    <meta>
                        <title lang="en">Quote</title>
                        <title lang="de">Zitat</title>
                    </meta>
                    <properties>
                        <property name="quote" type="text_editor">
                            <meta>
                                <title lang="en">Quote</title>
                                <title lang="de">Zitat</title>
                            </meta>
                        </property>
                        <property name="background" type="checkbox">
                            <meta>
                                <title lang="en">Background Color</title>
                                <title lang="de">Hintergrundfarbe</title>
                            </meta>
                            <params>
                                <param name="type" value="toggler"/>
                            </params>
                        </property>
                    </properties>
                </type>
                <type name="media_gallery">
                    <meta>
                        <title lang="en">Media</title>
                        <title lang="de">Medien</title>
                    </meta>
                    <properties>
                        <property name="medias" type="media_selection">
                            <meta>
                                <title lang="en">Media</title>
                                <title lang="de">Medien</title>
                            </meta>
                            <params>
                                <param name="type" value="image"/>
                            </params>
                        </property>
                        <property name="background" type="checkbox">
                            <meta>
                                <title lang="en">Background Color</title>
                                <title lang="de">Hintergrundfarbe</title>
                            </meta>
                            <params>
                                <param name="type" value="toggler"/>
                            </params>
                        </property>
                    </properties>
                </type>
                <type name="button">
                    <meta>
                        <title lang="en">Button</title>
                        <title lang="de">Button</title>
                    </meta>
                    <properties>
                        <property name="link" type="single_internal_link">
                            <meta>
                                <title lang="en">Link</title>
                                <title lang="de">Link</title>
                            </meta>
                        </property>
                        <property name="background" type="checkbox">
                            <meta>
                                <title lang="en">Background Color</title>
                                <title lang="de">Hintergrundfarbe</title>
                            </meta>
                            <params>
                                <param name="type" value="toggler"/>
                            </params>
                        </property>
                    </properties>
                </type>
                <type name="fullimage">
                    <meta>
                        <title lang="en">Image</title>
                        <title lang="de">Image</title>
                    </meta>
                    <properties>
                        <property name="image" type="media_selection">
                            <meta>
                                <title lang="en">Image</title>
                                <title lang="de">Bild</title>
                            </meta>
                            <params>
                                <param name="type" value="image, video"/>
                            </params>
                        </property>
                        <property name="size" type="single_select">
                            <meta>
                                <title lang="en">Header Size</title>
                                <title lang="de">Header Größe</title>
                            </meta>
                            <params>
                                <param name="values" type="collection">
                                    <param name="small">
                                        <meta>
                                            <title lang="en">Small</title>
                                            <title lang="de">Klein</title>
                                        </meta>
                                    </param>
                                    <param name="medium">
                                        <meta>
                                            <title lang="en">Medium</title>
                                            <title lang="de">Mittel</title>
                                        </meta>
                                    </param>
                                    <param name="large">
                                        <meta>
                                            <title lang="en">Large</title>
                                            <title lang="de">Groß</title>
                                        </meta>
                                    </param>
                                </param>
                            </params>
                        </property>
                    </properties>
                </type>
                <type name="action">
                    <meta>
                        <title lang="en">Action</title>
                        <title lang="de">Aktion</title>
                    </meta>
                    <properties>
                        <property name="actions" type="snippet">
                            <meta>
                                <title lang="en">Action</title>
                                <title lang="de">Aktion</title>
                            </meta>
                            <params>
                                <param name="snippetType" value="action"/>
                            </params>
                        </property>
                    </properties>
                </type>
                <type name="team">
                    <meta>
                        <title lang="de">Team</title>
                        <title lang="en">Team</title>
                    </meta>
                    <properties>
                        <property name="title" type="text_line">
                            <meta>
                                <title lang="en">Title</title>
                                <title lang="de">Titel</title>
                            </meta>
                        </property>
                        <property name="background" type="checkbox">
                            <meta>
                                <title lang="en">Background Color</title>
                                <title lang="de">Hintergrundfarbe</title>
                            </meta>
                            <params>
                                <param name="type" value="toggler"/>
                            </params>
                        </property>
                        <property name="contacts" type="contact">
                            <meta>
                                <title lang="en">Contacts</title>
                            </meta>
                            <params>
                                <param name="contact" value="true"/>
                            </params>
                        </property>
                    </properties>
                </type>
            </types>
        </block>
    </properties>
</template>